<?xml version="1.0" encoding="utf-8"?>

<!-- A cardview for the List with the event's details. -->
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bookEventCard"
    android:layout_width="360dp"
    android:layout_height="175dp"
    android:layout_gravity="center_horizontal"
    android:layout_margin="5dp"
    android:padding="5dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="15dp">

    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="175dp"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <!-- A textView for event's date  -->
        <TextView
            android:id="@+id/eventDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginTop="0dp"
            android:autoSizeTextType="uniform"
            android:padding="5dp"
            android:text="Day,  Month DN"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- A textView for event's time-->
        <TextView
            android:id="@+id/eventTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:layout_marginTop="0dp"
            android:autoSizeTextType="uniform"
            android:text="Time"
            android:textAlignment="center" />

        <!-- A textView for event's place-->
        <TextView
            android:id="@+id/eventPlace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_marginTop="0dp"
            android:autoSizeTextType="uniform"
            android:text="Place"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:textStyle="bold|italic" />

        <!-- A textView for ticket's price-->
        <TextView
            android:id="@+id/ticketPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:autoSizeTextType="uniform"
            android:text="price"
            android:textAlignment="center" />

        <!-- A progressBar for ticket availability-->
        <ProgressBar
            android:id="@+id/ticketAvailability"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:backgroundTint="@color/white"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>