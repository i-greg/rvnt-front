<?xml version="1.0" encoding="utf-8"?>

<!-- A CardView for RecyclerView in BookTicketsActivity that displays
the information [date[i], time[i]. place, price] for an event.-->
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bookEventCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_margin="5dp"
    android:padding="5dp"
    app:cardCornerRadius="15dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">


        <!-- A textView for event's date  -->
        <TextView
            android:id="@+id/eventDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginTop="0dp"
            android:autoSizeTextType="uniform"
            android:padding="5dp"
            android:text="Day,  Month DN"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold" />


        <!-- A textView for event's time-->
        <TextView
            android:id="@+id/eventTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:layout_marginTop="0dp"
            android:autoSizeTextType="uniform"
            android:text="Time"
            android:textAlignment="center"
            android:textColor="@color/app_orange" />


        <!-- A textView for event's place-->
        <TextView
            android:id="@+id/eventPlace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_marginTop="0dp"
            android:autoSizeTextType="uniform"
            android:text="Place"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:textStyle="bold|italic" />


        <!-- A Layout for ticket's price-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <!-- A textView for ticket's price-->
            <TextView
                android:id="@+id/ticketPrice"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="0dp"
                android:autoSizeTextType="uniform"
                android:text="price"
                android:textAlignment="center" />

            <!-- A textView for euro icon.-->
            <TextView
                android:id="@+id/coinIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:text="â‚¬"
                android:textAlignment="center"/>


        </LinearLayout>


    </LinearLayout>
</androidx.cardview.widget.CardView>